// Два основных цвета
$gray_color = #585858
$orange_color = #f4a33a

// Перечисление всех айдишников которые участвуют в сетке и установка каждому свойства grid-area
areas = result input clear invert percent division number_7 number_8 number_9 multiplication number_4 number_5 number_6 subtraction number_1 number_2 number_3 addition number_0 dot equally
for area in areas
  {'#'+area}
    grid-area: area


body *
  margin 0
  padding 0
  font-family: 'Open Sans', sans-serif;

.calculator
  margin 100px auto
  width 232px
  display grid
  grid-template-areas "input input input input"\
  "result result result result"\
  "clear invert percent division"\
  "number_7 number_8 number_9 multiplication"\
  "number_4 number_5 number_6 subtraction"\
  "number_1 number_2 number_3 addition"\
  "number_0 number_0 dot equally"
  grid-template-columns repeat(4, 1fr)
  grid-template-rows 30px 50px repeat(5, 47px)
  grid-gap 1px

  background $gray_color
  border-radius 6px
  overflow hidden

  box-shadow: 0 20px 40px 0 rgba(0, 0, 0, 0.6);
  border: 1px black solid

  & > button
    outline none
    border 0
    width 100%
    height 100%
    background $gray_color + 30%
    &:active
      background $gray_color



  & > * {
    display flex
    align-items center
    justify-content center

    font-size 22px
    color white
    cursor pointer
  }

#result, #input
  background $gray_color
  justify-content flex-end
  padding 0 16px
  position relative
  overflow hidden

  &:before
    content ""
    position absolute
    bottom 0
    left 0
    height 100%
    width 30px
    background linear-gradient(to right, $gray_color 70%, transparent);
  p
    display flex
    justify-content flex-end
    overflow hidden

    span
      white-space nowrap

#input
  font-size: 17px;
  align-items: flex-end;

#result
  font-size 33px
  align-items flex-start


#percent svg,
#multiplication svg,
#invert svg
  width 14px
  height 14px
  fill white


#division,
#multiplication,
#equally,
#subtraction,
#addition
  background $orange_color
  &:active
    background-color $orange_color - 30%


#clear,
#invert,
#percent
  background $gray_color + 10%
  &:active
    background-color $gray_color - 20%
  &:disabled
    background-color $gray_color - 20%
    svg
      fill $gray_color + 20%
